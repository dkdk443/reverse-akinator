# App Configuration
NODE_ENV=development
PORT=3000

# Database
# Option 1: Local SQLite (Docker uses this by default)
DATABASE_PATH=./data/persons.db

# Option 2: Turso cloud (set these to use Turso instead of local SQLite)
# TURSO_DATABASE_URL=libsql://your-db-name-org.turso.io
# TURSO_AUTH_TOKEN=your-auth-token

# Next.js
NEXT_TELEMETRY_DISABLED=1

# Gemini API (for AI questions)
GEMINI_API_KEY=your-gemini-api-key-here

# Optional: Session Secret (for production)
# SESSION_SECRET=your-secret-key-here
